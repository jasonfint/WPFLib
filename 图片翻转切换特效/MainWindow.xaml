<Window x:Class="图片翻转切换特效.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:图片翻转切换特效"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <UniformGrid Rows="2" Columns="3" Margin="50,20,50,50">
            <local:FlipSwitchImageControl NormalImage="/Images/1.jpg" HoverImage="/Images/2.jpg" Margin="10"></local:FlipSwitchImageControl>
            <local:FlipSwitchImageControl NormalImage="/Images/3.jpg" HoverImage="/Images/4.jpg" Margin="10"></local:FlipSwitchImageControl>
            <local:FlipSwitchImageControl NormalImage="/Images/5.jpg" HoverImage="/Images/6.jpg" Margin="10"></local:FlipSwitchImageControl>
            <local:FlipSwitchImageControl NormalImage="/Images/7.jpg" HoverImage="/Images/8.jpg" Margin="10"></local:FlipSwitchImageControl>
            <local:FlipSwitchImageControl NormalImage="/Images/1.jpg" HoverImage="/Images/2.jpg" Margin="10"></local:FlipSwitchImageControl>
            <local:FlipSwitchImageControl NormalImage="/Images/3.jpg" HoverImage="/Images/4.jpg" Margin="10"></local:FlipSwitchImageControl>
        </UniformGrid>

    </Grid>
</Window>
